

object mainObj {
  
  def main(args: Array[String]) {
    val nums: List[Int] = List(1, 2, 3, 4, 1, 1, 1, 1, 1)
    println(length(nums))
    
    println(take(nums, 3))
  }
  
  /**
   * returns the length of a list
   */
  def length(l: List[Int]): Int =
    if (l.isEmpty) 0
    else length(l.tail) + 1
    
  def take(l: List[Int], n: Int): List[Int] =
    if (n == 0) l
    else take(l.tail, n-1)
      
    
}