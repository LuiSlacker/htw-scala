

object mainObj {
  
  def main(args: Array[String]) {
    val nums: List[Int] = List(1, 4, 3, 4, 5, 6)
    
    println("Length of List(1, 2, 3, 4, 5, 6): " + length(nums))
    
    println("Drop first 2 Elements from List(1, 2, 3, 4, 5, 6): " + drop(nums, 2))
    
    println(take(nums, 2));
  }
  
  /**
   * returns the length of a list
   */
  def length(l: List[Int]): Int =
    if (l.isEmpty) 0
    else length(l.tail) + 1
    
    
  def take(l: List[Int], n: Int): List[Int] =
    if (n == 0) Nil
    else l.head :: take(l.tail, n-1)
    
    
  /**
   * drops the first n elements of a list
   */
  def drop(l: List[Int], n: Int): List[Int] =
    if (n == 0) l
    else drop(l.tail, n-1)
    
}